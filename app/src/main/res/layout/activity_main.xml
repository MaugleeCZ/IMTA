<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/container" android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pocetKliku"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:paddingTop="5dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:text="Váha jednoho kliku:"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sss" android:layout_weight="1"/>
        <TextView
                android:text="0"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vahaKlikutf" android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="408dp" app:srcCompat="@drawable/mike_junior" android:id="@+id/obrazek"/>
    <Button
            android:id="@+id/buttonObchod"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Vylepšení Mika"
            android:layout_gravity="center" tools:ignore="OnClick"/>
    <Button
            android:text="Vylepšení kliků"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/button"/>

</LinearLayout>