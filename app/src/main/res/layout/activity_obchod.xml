<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Obchod" android:id="@+id/tableLayout" android:orientation="vertical">
    <ImageView
            android:layout_width="430dp"
            android:layout_height="132dp" app:srcCompat="@drawable/mike_batole" android:id="@+id/mikeBatole"/>
    <TextView
            android:text="Cena: 100"
            android:layout_gravity="center"
            android:layout_width="109dp"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>
    <Button
            android:text="Koupit malý zlo"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/malejMike"/>
    <ImageView
            android:layout_width="426dp"
            android:layout_height="152dp" app:srcCompat="@drawable/mike_skolak" android:id="@+id/mikeSkolak"/>
    <TextView
            android:text="Cena: 1000"
            android:layout_gravity="center"
            android:layout_width="109dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"/>
    <Button
            android:text="Koupit rozumnýho Mika"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/rozumnejMike"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="147dp" app:srcCompat="@drawable/mike" android:id="@+id/mikeAngry"/>
    <TextView
            android:text="Cena: 10000"
            android:layout_gravity="center"
            android:layout_width="109dp"
            android:layout_height="wrap_content" android:id="@+id/textView7"/>
    <Button
            android:text="Radši bych nekupoval"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/angyMike"/>
    <Button
            android:text="Zpět na klik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/zpetNaKlikButton"/>
</LinearLayout>